<nav class="navbar fixed-top navbar-light bg-light">
  <form class="form-inline">
    <button class="btn btn-outline-success" type="button"><%= link_to 'add a cocktail', new_cocktail_path %></button>
  </form>
</nav>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1514933651103-005eec06c04b?ixlib=rb-1.2.1&auto=format&fit=crop&w=1567&q=80);">
  <div class="container">
    <h1>Mr & Ms Cocktail</h1>
    <p>change your life, make cocktails</p>
  </div>
</div>

<div class="row row-cols-2 row-cols-md-2">

  <% @cocktails.each do |cocktail| %>
  <div class="col-6 col-md-3">
    <div class="card">
      <% unless cocktail.photo.attachment.nil? %>
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 300, crop: :fill %>
      <% end %>
      <div class="card-body">
      <h2><%= link_to cocktail.name, cocktail_path(cocktail.id) %></h2>
      <%= link_to 'edit cocktail name', edit_cocktail_path(cocktail)%> | <%= link_to 'destroy', cocktail, method: :delete  %>
      </div>
    </div>
  </div>
      <% end %>
</div>


